<!DOCTYPE html>
<html>
<head>
  <title>Changayi</title>
   <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->    
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "base" %>
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="global_container" class="clearfix default">
	<div id="header_container">
		<div id="header">
			<div id="header_inner">
				<h1 id="logo">
					<%= image_tag("logo.png", :alt => "Changayi", :class => "G_event E-LogoNH_click_grouponLogo") %>
				</h1>
				<div class="layer2 clearfix">
					<ul id="header_nav">
						<li><%= link_to "Home", '#' %></li>
						<li><%= link_to "Cars", '#' %></li>
						<li><%= link_to "Bikes", '#' %></li>
						<li><%= link_to "Research", '#' %></li>
						
					</ul>
					<ul class="account_links">
					<li><%= link_to "Login", '#' %></li>
					<li><%= link_to 'Sign Up', new_user_path %></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
			
	<div id="main" class="clearfix">
		<%= yield %>
	</div>
	<div id="footer">
		<div class="footer_wrapper_top">
			<div class="footer">
				<div class="top clearfix">
					<ul class="clearfix">
						<%= render 'layouts/footer' %>
					</ul>
				</div>	
			</div>
		</div>
	</div>
	
	 <%= debug(params) if Rails.env.development? %>
	 </div>

</body>
</html>
